<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

<GridLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/back"
    android:columnCount="6"
    android:columnOrderPreserved="false"
    android:rowCount="2"
    android:useDefaultMargins="true">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:background="#00FFFFFF"
        android:onClick="cymbal1"
        android:scaleType="fitCenter"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:srcCompat="@drawable/cymbal1" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_gravity="fill"
        android:background="#00FFFFFF"
        android:onClick="tom1"
        android:scaleType="fitCenter"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:srcCompat="@drawable/tom1" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="0"
        android:layout_column="3"
        android:layout_gravity="fill"
        android:background="#00FFFFFF"
        android:onClick="tom2"
        android:scaleType="fitCenter"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:srcCompat="@drawable/tom2" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="0"
        android:layout_column="4"
        android:layout_gravity="fill"
        android:background="#00FFFFFF"
        android:onClick="cymbal2"
        android:scaleType="fitCenter"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:srcCompat="@drawable/cymbal2" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:background="#00FFFFFF"
        android:onClick="hihat"
        android:scaleType="fitCenter"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:srcCompat="@drawable/hihat" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:background="#00FFFFFF"
        android:onClick="snare"
        android:scaleType="fitCenter"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:srcCompat="@drawable/snare" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:background="#00FFFFFF"
        android:onClick="bass"
        android:scaleType="fitCenter"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:srcCompat="@drawable/bass" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="1"
        android:layout_column="4"
        android:layout_gravity="fill"
        android:background="#00FFFFFF"
        android:onClick="tom3"
        android:scaleType="fitCenter"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:srcCompat="@drawable/tom3" />

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="1"
        android:layout_column="5"
        android:layout_gravity="fill"
        android:background="#00FFFFFF"
        android:onClick="cymbal3"
        android:scaleType="fitCenter"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:srcCompat="@drawable/cymbal3" />

</GridLayout>
</RelativeLayout>